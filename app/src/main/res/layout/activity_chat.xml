<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <ListView
            android:id="@+id/messagesContainer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:listSelector="@android:color/transparent"
            android:transcriptMode="alwaysScroll"
            android:divider="@null"
            android:layout_above="@+id/speakPhrase" />

        <EditText
            android:id="@+id/speakPhrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoText="true"
            android:hint="@string/input_select_phrase"
            android:layout_above="@+id/buttonSpeak"
            android:layout_toLeftOf="@+id/imageButtonPlus" />

        <Button
            android:id="@+id/buttonSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_speak"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/imageButtonPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus1"
            android:adjustViewBounds="false"
            android:nestedScrollingEnabled="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/messagesContainer"
            android:layout_alignLeft="@+id/imageButtonMicrophone"
            android:layout_alignStart="@+id/imageButtonMicrophone"
            android:contentDescription="@string/add_phrase"/>

        <ImageButton
            android:id="@+id/imageButtonMicrophone"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:layout_below="@+id/imageButtonPlus"
            android:adjustViewBounds="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/microphone1"
            android:contentDescription="@string/microphono"
            android:layout_alignTop="@+id/buttonSpeak" />

        <Button
            android:id="@+id/buttonChoosePhrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_phrase"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/buttonSpeak"
            android:layout_toStartOf="@+id/buttonSpeak" />

    </RelativeLayout>
</LinearLayout>