<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.federico.myapplication.StartActivity"
    android:focusableInTouchMode="true">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSearchPlace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonChoosePhrase"
        android:layout_alignRight="@+id/imageButtonMicrophone"
        android:layout_alignEnd="@+id/imageButtonMicrophone" />

    <Button
        android:id="@+id/buttonSearchPlace"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/buscar_lugar"
        android:layout_above="@+id/buttonSearchPlaceName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/buttonSearchPlaceName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/buscar_lugar_por_nombre"
        android:layout_above="@+id/checkBoxGps"
        android:layout_alignRight="@+id/imageButtonMicrophone"
        android:layout_alignEnd="@+id/imageButtonMicrophone" />

    <CheckBox
        android:id="@+id/checkBoxGps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activate_gps"
        android:textSize="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"/>

    <ScrollView
        android:id="@+id/scrollViewChat"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:fillViewport="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/speakPhrase">
        <TextView
            android:id="@+id/textOutput"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:textSize="20dp"
            android:lineSpacingExtra="7dp"/>
    </ScrollView>

    <ImageButton
        android:id="@+id/imageButtonMicrophone"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:layout_gravity="bottom"
        android:adjustViewBounds="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"

        android:src="@drawable/microphone1"
        android:contentDescription="@string/microphono"
        android:layout_alignTop="@+id/buttonSpeak" />

    <Button
        android:id="@+id/buttonChoosePhrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_phrase"
        android:layout_below="@+id/speakPhrase"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/speakPhrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:nextFocusUp="@id/speakPhrase"
        android:nextFocusLeft="@id/speakPhrase"
        android:layout_centerVertical="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/imageButtonMicrophone"
        android:layout_toStartOf="@+id/imageButtonMicrophone" />

    <Button
        android:id="@+id/buttonSpeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_speak"

        android:layout_below="@+id/speakPhrase"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButtonPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plus1"
        android:adjustViewBounds="false"
        android:nestedScrollingEnabled="false"
        android:layout_above="@+id/imageButtonMicrophone"
        android:layout_toRightOf="@+id/speakPhrase"
        android:layout_below="@+id/scrollViewChat"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>